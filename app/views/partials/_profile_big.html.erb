<% if logged_in? %>
<div class='col col-press-18 col-profile profile-big'>
	<div class='card mbm profile-card'>
		<div class='character fl'>
			<% monster_presence = current_user.user_monster.monster_id %>
			<% if monster_presence != 0 %>
				<img src='<%= Monster.find(current_user.user_monster.monster_id).avatar %>.gif' />
			<% else %>
				<div class='choose-monstrik tac'>
					<%= link_to monstrik_path do %>
						<h2>Выберите монстрика</h2>
					<% end %>
				</div>
			<% end %>
		</div>
		<div class='satiety fl twsb'>
			<div class='name tcmc'>
				<span><%= current_user.user_monster.name %></span>
				<div class='coins tcm'>
					<img src='/images/coin.png' /> <%= current_user.score %>
				</div>
			</div>
		</div>
		<div class='clear'></div>
		<div class='profile-link bdrn bdrt bc-snow-light card-row card-row--south'>
			<%=link_to "Мой профиль", user_path(current_user), class: "tcm" %>
		</div>
	</div>
	<div class='card mbl profile-menu'>
		<%= render '/partials/left_menu' %>
	</div>
</div>
<% else %>
	<div class='col col-press-18 col-profile profile-big'>
		<div class='card mbm profile-card'>
			<div class='character'>
				<img src='/images/stranger-toys.jpg' />
				<%= link_to 'Регистрация', signup_path, class: 'butn medium green rounded w--100 mbs' %>
			</div>
		</div>
	</div>
<% end %>