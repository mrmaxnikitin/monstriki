<div class='col col-profile profile-huge'>
	<div class='card mbm profile-card'>
		<div class='character'>
			<% monster_presence = user.user_monster.monster_id %>
			<% if monster_presence != 0 %>
				<img src='<%= Monster.find(user.user_monster.monster_id).avatar %>.gif' />
			<% else %>
				<div class='choose-monstrik tac'>
					<h1>Нету монстрика</h1>
				</div>
			<% end %>
		</div>
		<div class='satiety twsb'>
			<div class='name tcmc'>
				<span><%= user.user_monster.name %></span>
				<div class='coins tcm'>
					<img src='/images/coin.png' /> <%= user.score %>
				</div>
			</div>
		</div>
		<div class='clear'></div>
	</div>
	<% if current_user?(@user) %>
		<div class='card mbl profile-menu'>
			<%= render '/partials/left_menu' %>
		</div>
	<% end %>
	<div class='card mbl information-and-statistic-user'>
		<div class='element'>
			<% if user.track.complete_quest
				tours_amount = user.track.current_tour
			else 
				tours_amount = user.track.current_tour - 1
			end %>
			<h5 class='h--thin'><img src='/images/flag.png'/> <span>Уровней пройдено: <b><%= tours_amount %></b></span></h5>
		</div>
	</div>
</div>