<div class='attraction-min tasks-attraction tac'>
	<h1 class='center-title'>Тренировки</h1>
</div>
<div class='row first-page-elm'>
	<div class='cell'>
		<%= render "/partials/profile_big" %>
		<div class='col col-67proc ml-2proc'>
			<h2 class='h--thin mbm'><span class='prxs'>Что будем тренировать?</span> <span class='tag tag--light tag--heading tag--heading--h2'><%= @tasks.count %> заданий</span></h2>

			<%= link_to logic_tasks_path do %>
			<div class='card direction'>
				<div class='mbadge direction-mbadge col'>
					<img src='/images/cute_monster_dribbble_2.jpg' />
				</div>
				<div class='direction-content col'>
					<div>
						<span class='tag tag--heading'><%= @tasks.where(direction: 'Логика').count %> заданий</span>
					</div>
					<h2 class='h--thin mbm'>Логика</h2>
				</div>
			</div>
			<% end %>

			<div class='card direction'>
				<div class='mbadge direction-mbadge col'>
					<img src='/images/background1.jpg' />
				</div>
				<div class='direction-content col'>
					<div>
						<span class='tag tag--heading'>2744 заданий</span>
					</div>
					<h2 class='h--thin mbm'>Воображение</h2>
				</div>
			</div>

			<%= link_to memory_tasks_path do %>
			<div class='card direction'>
				<div class='mbadge direction-mbadge col'>
					<img src='/images/img-slide3.png' />
				</div>
				<div class='direction-content col'>
					<div>
						<span class='tag tag--heading'><%= @tasks.where(direction: 'Память').count %> заданий</span>
					</div>
					<h2 class='h--thin mbm'>Память</h2>
				</div>
			</div>
			<% end %>

		</div>
	</div>
</div>

