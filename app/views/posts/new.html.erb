<div class='row first-page-elm'>
	<div class='cell'>
		<div class='col col-press-25'>
			<%= render "/partials/profile" %>
		</div>
		<div class='col col-78proc col-main  ml-2proc'>
			<h2 class='tac h--thin'>Create Post</h2>
			<%= simple_form_for(@post, url: posts_path, html: { class: 'registration-form' }) do |f| %>
		      <%= f.input :title, label: false, input_html: { class: 'input-sp',  placeholder: 'Заголовок' } %>
		      <%= f.input :img, label: false, input_html: { class: 'input-sp',  placeholder: 'Изображение' } %>
		      <%= f.input :text, as: :text, label: false, input_html: { class: 'input-sp',  placeholder: 'Текст' } %> 
		      <%= f.button :submit, 'Create Post', class: 'btn btn-our btn-our-green' %>
		  <% end %>
		</div>
	</div>
</div>

