<% quests.each.with_index(1) do |quest, i|%>
	<%
		quest_id = quest.id
		if current_user.age == 4 || current_user.age == 5
			pic1 = Task.find(Quest.find(quest_id).age6[1]).pic1
			if pic1 == "пусто"
				pic1 = Task.find(Quest.find(quest_id).age6[1]).pic2
			end
		elsif current_user.age == 6 || current_user.age == 7
			pic1 = Task.find(Quest.find(quest_id).age7[1]).pic1
			if pic1 == "пусто"
				pic1 = Task.find(Quest.find(quest_id).age7[1]).pic2
			end
		end
		
			
	%>
	<%
		if quest.id < current_user.track.current_quest
			status_quest = 2
		else
			if quest.id == current_user.track.current_quest
				if current_user.track.complete_quest
					status_quest = 2
				else
					status_quest = 1
				end
			else
				status_quest = 0
			end
		end

		if quest.id == current_user.track.current_quest
			active_link = true
		else
			active_link = false
		end

		quest_title = "Квест " + i.to_s
		quest_text = 'Выполни все задания, чтобы открыть следующий квест'
		if quest.checkpoint
			quest_title = "Котрольный квест"
			quest_text = 'Меньше ошибок - выше степень диплома'
		end
	%>
	<% if active_link %>
		<%= link_to trip_quests_path, class: "snap-sound" do %>
			<div class='trip-quest current_quest col col-2of6 pd10 tac bigEntrance'>
				<div class='card'>
					<div class='quest-img ma' style='background: url(<%= pic1 %>); background-size: cover; background-position: center;'>
						<img class='quest-status pulse' src='images/play-quest.png' />
					</div>
					<h5 class='mts'><%= quest_title %></h5>
				</div>
			</div>
		<% end %>
	<% else %>
		<% if status_quest == 0 
			grayscale = "grayscale-inactive"
		end %>
		<div class='trip-quest trip-quest-inactive <%= grayscale %> col col-2of6 pd10 tac'>
			<div class='card'>
				<div class='quest-img ma' style='background: url(<%= pic1 %>); background-size: cover; background-position: center;'>
					<% if status_quest == 2 %>
						<img class='quest-status' src='images/done-quest.png' />
					<% end %>
				</div>
				<h5 class='mts'><%= quest_title %></h5>
			</div>
		</div>
	<% end %>
<% end %>
<div class='clear'></div>
<script>
	$('.trip-quest .card .quest-img').height($('.trip-quest .card .quest-img').width())
</script>
