<div class='cover location2'>
	<% tours = Tour.find(Location.find(@track.current_location).tours) %>
	<% tours.each do |tour|%>
		<% if @track.current_tour != tour.id %>
				<script>
					$(document).ready(function(){
				  	setTimeout(function(){$('.location2 .tour<%=tour.id%>').addClass('shadow');}, 1000);
					});
				</script>
		<% end %>
		<div class='col col-2of6 tour<%= tour.id %>'>
			<div class='wrap-img-tour ma tac'>
				<div class='img-tour ma'>
				</div>
				<h6><%= tour.name %></h6>
			</div>
		</div>
	<% end %>
</div>
<div class='clear'></div>
<script>
	$(document).ready(function(){
		$('.img-tour').height($('.img-tour').width())
	});
</script>