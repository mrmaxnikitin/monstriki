<div class='row first-page-elm entry-page'>
	<div class='cell'>
		<div class='entry-form card'>
			<h2 class='tac'>Вход</h2>
				<%= simple_form_for(@sign_in, url: sessions_path, html: {class: 'registration-form'}) do |f| %>
		      <%= f.input :email, label: false, input_html: { class: 'input-sp',  placeholder: 'Электронная почта' } %>
		      <%= f.input :password, label: false, input_html: { class: 'input-sp',  placeholder: 'Пароль' } %>
		      <%= f.button :submit, 'Войти', class: 'btn btn-our btn-our-green' %>
		    <% end %>
		    <p class='tac'>
		      <%= link_to 'Забыли пароль?', new_password_reset_path %>
		    </p>
		</div>
	</div>
</div>

