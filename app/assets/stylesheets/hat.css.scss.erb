.hat{
  background-color: white;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  .menu-point{
    font-size: 16px;
    font-weight: 400;
    position: relative;
    bottom: 8px;
    left: 30px;
    margin-left: 20px;
  }
  #header-logo{
    color: #393d40 !important;
  }
  .right-part{
    float: right;
    position: relative;
    top: 14px;
    .create-accaunt{
      background-color: transparent;
      border: 1px solid #ffae1c;
      color: #ffae1c !important;
      line-height: 2.5;
      margin-right: 18px;
      &:hover {
        background-color: #ffae1c;
        border-color: #ffae1c;
        color: #fff !important;
      }
    }
    .sign-in{
      font-size: 15px;
      font-weight: 400;
      position: relative;
      top: 2px;
    }
  }
}
#header-logo{
  position: relative;
  top: 8px;
  img{
  	width: 40px;
  }
  span{
  	font-family: 'BoomBoom';
  	font-size: 28px;
  	position: relative;
  	bottom: 14px;
  	left: 3px;
  }
}